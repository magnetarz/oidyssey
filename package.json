{
  "name": "oidyssey",
  "version": "1.0.0", 
  "description": "OIDyssey - A comprehensive n8n community node for SNMP network device monitoring and automation",
  "keywords": [
    "n8n-community-node-package",
    "snmp",
    "network",
    "monitoring",
    "automation",
    "oidyssey"
  ],
  "author": "OIDyssey Contributors",
  "license": "MIT",
  "main": "index.js",
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=18.10.0"
  },
  "n8n": {
    "credentials": [
      "dist/credentials/SnmpCommunity.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Snmp/Snmp.node.js",
      "dist/nodes/SnmpTrapTrigger/SnmpTrapTrigger.node.js"
    ]
  },
  "scripts": {
    "build": "tsc && node scripts/copy-assets.js && npm run lint:fix",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "dependencies": {
    "net-snmp": "^3.8.2"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "n8n-workflow": "*",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/types/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/oidyssey.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/oidyssey/issues"
  },
  "homepage": "https://github.com/yourusername/oidyssey#readme"
}
